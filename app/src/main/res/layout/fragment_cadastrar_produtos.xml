<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B4F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8BC34A"
            android:gravity="center"
            android:padding="12dp"
            android:text="Cadastrar Produto"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Editar Produto"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingStart="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/proImagemView"
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:background="#FFF"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/buttonGaleria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#6C4A9F"
                    android:text="Galeria"
                    android:textColor="#FFF"
                    app:cornerRadius="20dp"/>
                <Button
                    android:id="@+id/buttonCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#6C4A9F"
                    android:text="Câmera"
                    android:textColor="#FFF"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/proCadNome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_nome"
            android:hint="Nome"
            android:padding="4dp"/>

        <Spinner
            android:id="@+id/proCadCategoria"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:popupBackground="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/proCadQuantidade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:backgroundTint="#FFFFFF"
                android:drawableStart="@drawable/ic_caixa"
                android:hint=" Quant. Total"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/proCadPreco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:backgroundTint="#FFFFFF"
                android:drawableStart="@drawable/ic_money"
                android:hint=" Preço"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:padding="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSalvarProduto"
            android:layout_width="178dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/plus"
            android:drawableLeft="@drawable/newproduct"
            android:paddingHorizontal="24dp"
            android:text="Salvar"
            android:textSize="20sp"
            android:textColor="#FFF"/>

        <!-- Botão Atualizar (inicialmente oculto) -->
        <Button
            android:id="@+id/buttonAtualizarProduto"
            android:layout_width="178dp"
            android:layout_height="70dp"
            android:background="@drawable/plus"
            android:drawableLeft="@drawable/newproduct"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:text="Atualizar"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>