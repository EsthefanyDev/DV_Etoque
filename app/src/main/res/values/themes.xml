<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.DV_Estoque" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/cray1</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:forceDarkAllowed">false</item>

        <!-- Configurações da Toolbar -->
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView</item>

        <!-- Cor de fundo geral -->


        <!-- Manter compatibilidade com Material Design -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DV_Estoque" parent="Base.Theme.DV_Estoque">
        <!-- Adicionar configurações específicas do Material3 se necessário -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:forceDarkAllowed">false</item>


    </style>

    <!-- Estilo adicional para a SearchView -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/white</item>
        <item name="searchHintIcon">@drawable/ic_pesquisar</item>
    </style>
</resources>